{
  "name": "ton-tact",
  "version": "0.4.0",
  "main": "./dist/main.js",
  "repository": "https://github.com/ex3ndr/tact-v2.git",
  "author": "Steve Korshakov <steve@korshakov.com>",
  "license": "MIT",
  "scripts": {
    "gen": "ohm generateBundles --withTypes src/grammar/*.ohm && ts-node ./src/prepare.ts",
    "clean": "rm -fr dist",
    "build": "tsc && cp ./src/grammar/grammar.ohm* ./dist/grammar/",
    "test": "jest",
    "release": "yarn clean && yarn build && yarn test && yarn release-it --npm.yarn1"
  },
  "files": [
    "dist/**/*",
    "src/**/*",
    "bin/**/*",
    "stdlib/**/*"
  ],
  "bin": {
    "tact": "./bin/tact"
  },
  "dependencies": {
    "@ipld/dag-pb": "2.1.18",
    "@types/bn.js": "^5.1.1",
    "arg": "^5.0.2",
    "blockstore-core": "1.0.5",
    "bn.js": "^5.2.1",
    "change-case": "^4.1.2",
    "ipfs-unixfs-importer": "9.0.10",
    "multiformats": "9.9.0",
    "ohm-js": "^16.4.0",
    "ora": "^6.1.2",
    "prando": "^6.0.1",
    "ton": "12.3.2",
    "ton-compiler": "^2.0.0",
    "ton-contract-executor": "^0.6.0",
    "ton-crypto": "^3.2.0",
    "ton-nodejs": "^1.4.3",
    "tvm-disassembler": "^1.2.1",
    "zod": "^3.20.2"
  },
  "devDependencies": {
    "@ohm-js/cli": "^1.1.0",
    "@release-it/keep-a-changelog": "^3.1.0",
    "@types/jest": "^29.2.3",
    "@types/node": "^18.11.9",
    "jest": "^29.3.1",
    "release-it": "^15.5.1",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3"
  },
  "resolutions": {
    "ton": "12.3.2"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "release-it": {
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/keep-a-changelog": {
        "filename": "CHANGELOG.md"
      }
    }
  }
}
